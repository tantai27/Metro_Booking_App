<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:clipToPadding="false"
    android:fitsSystemWindows="false"> <!-- thêm dòng này -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clipChildren="false"
        android:gravity="center_horizontal"
        android:padding="0dp"> <!-- ⚠️ Đảm bảo không có padding -->

        <!-- Ảnh nền Metro -->

        <!-- Logo tròn ở giữa -->

        <!-- Form đăng ký -->

        <com.example.metro_booking_app.view.DiagonalImageView
            android:id="@+id/ivMetro"
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:layout_margin="0dp"
            android:scaleType="centerCrop"
            android:src="@drawable/metro_background_4" />

        <TextView
            android:id="@+id/tvAppName"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="-142dp"
            android:background="@drawable/circle_background"
            android:gravity="center"
            android:text="Metro"
            android:textColor="#404040"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etName"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:hint="Tên"
            android:textColor="@color/black"
            android:inputType="textPersonName"
            android:background="@drawable/edit_text_background"
            android:textColorHint="#999999"
            android:layout_marginTop="24dp"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColor="@color/black"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_background"
            android:textColorHint="#999999"
            android:layout_marginTop="12dp"
            android:padding="12dp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:hint="Mật khẩu"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_background"
            android:textColorHint="#999999"
            android:layout_marginTop="12dp"
            android:padding="12dp" />

        <!-- Quên mật khẩu -->
        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quên mật khẩu?"
            android:textColor="@android:color/holo_blue_dark"
            android:paddingTop="16dp"
            android:layout_gravity="center" />
        <!-- Nút Đăng ký -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textStyle="bold"
            android:backgroundTint="#e74c3c"
            android:textColor="#F0FFFF"
            android:layout_marginTop="20dp" />

        <!-- Chuyển sang đăng nhập -->
        <Button
            android:id="@+id/btnToLogin"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Đăng nhập"
            android:textStyle="bold"
            android:backgroundTint="#cccccc"
            android:textColor="#404040"
            android:layout_marginTop="12dp" />
    </LinearLayout>
</ScrollView>
